<!DOCTYPE html>
<html>

<head>
    <title>Factorial</title>
    <script language="Javascript">
        var n, i, fact = 1;
        n = parseInt(window.prompt("Enter a number"));
        if (n == 0) {
            document.writeln("factorial is 1");

        } else if (n < 0) {
            document.writeln("no factorial");

        } else {
            for (i = 1; i <= n; i++) {
                fact *= i;
            }
            document.writeln("factorial is " + fact);
        }
    </script>
</head>

<body>
</body>

</html>
